# PartyKit server configuration
NEXT_PUBLIC_PARTY_SOCKET_HOST=localhost:1999

# MoQ Configuration
# Enable MoQ for game data transport (uses WebSocket as fallback if MoQ fails)
NEXT_PUBLIC_USE_MOQ=false

# Force MoQ mode - no WebSocket data fallback
# When true, the game will ONLY use MoQ for data transport
# If MoQ connection fails, errors will be thrown instead of falling back to WebSocket
# This is useful for testing MoQ reliability and ensuring no accidental WebSocket usage
NEXT_PUBLIC_MOQ_FORCE=false

# Basehub CMS token (optional, for content management)
BASEHUB_TOKEN=